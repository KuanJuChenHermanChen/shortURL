{{#if shortURL}}
<div class="result">
  <h3>Success! Please use this link:</h3>
  <p id="generatedURL">localhost:3000/shorten/{{shortURL}}</p>
</div>
<button class="copy">Copy</button>
<button class="home">Back to Home Page</button>

<script>
  const URL = document.querySelector("#generatedURL");
  const copyBtn = document.querySelector(".copy");
  const homeBtn = document.querySelector(".home");

  copyBtn.addEventListener("click", () => {
    navigator.clipboard.writeText(URL.innerText)
      .then(() => alert('copied'))
      .catch(error => console.log(error))
  });

  homeBtn.addEventListener("click", () => {
    window.location.href = "/";
  });
</script>

{{else}}
<form action="/shorten" method="POST">
  <div class="container">
    <input type="url" name="url" placeholder="Input URL here" required />
    <button class="shorten" type="submit">Shorten</button>
  </div>
</form>
{{/if}}